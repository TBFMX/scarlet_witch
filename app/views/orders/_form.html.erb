<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#hide_lasagna").click(function(){
    $("#lasagna").hide();
  });
  $("#show_lasagna").click(function(){
    $("#lasagna").show();
  });
  $("#hide_ensalada").click(function(){
    $("#ensalada").hide();
  });
  $("#show_ensalada").click(function(){
    $("#ensalada").show();
  });
  $("#hide_aderezo").click(function(){
    $("#aderezo").hide();
  });
  $("#show_aderezo").click(function(){
    $("#aderezo").show();
  });
  $("#show_total").click(function(){
    $("#total").show();
  });
  $("#hide_total").click(function(){
    $("#total").hide();
  });    
});

</script>

  <%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="cintilla_pedidos">
      <h2>Lasagnas</h2>
      <img id="show_lasagna" src="../../images/plus-icon.png">
      <img id="hide_lasagna" src="../../images/less.jpg">
    </div>

    <div id="lasagna"> 
      <% @lasagna.each do |las| %>
        <div class="mostrar_articulos">
        <img src="../../images/lasagna-001.jpg">
        <h3><%=  las.title.to_s + ":" %></h3>
        <div class="cantidad">
          <h4>Cantidad:</h4>
          <%= number_field_tag las.title.to_s ,"", maxlength: 2, class: "articulos" %>
        </div> 
        </div>
      <% end %>
    </div>

    <div class="cintilla_pedidos">
      <h2>Ensaladas </h2>
      <img id="show_ensalada" src="../../images/plus-icon.png">      
      <img id="hide_ensalada" src="../../images/less.jpg">
    </div>

    <div id ="ensalada"> 
      <% @ensalada.each do |ens| %>
        <div class="mostrar_articulos">
        <img src="../../images/lasagna-002.jpg">
        <h3><%=  ens.title.to_s + ":" %></h3>
        <div class="cantidad">
          <h4>Cantidad:</h4>
          <%= number_field_tag ens.title.to_s ,"", maxlength: 2, class: "articulos" %>
        </div> 
        </div>
      <% end %>
    </div>

    <div class="cintilla_pedidos">
      <h2>Aderezos</h2>
      <img id="show_aderezo" src="../../images/plus-icon.png"> 
