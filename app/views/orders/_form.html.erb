    </div>

    <div id ="aderezo"> 
      <% @aderezo.each do |adec| %>
        <div class="mostrar_articulos">
        <img src="../../images/lasagna-003.jpg">
        <h3><%=  adec.title.to_s + ":" %></h3>
        <div class="cantidad">
          <h4>Cantidad:</h4>
          <%= number_field_tag adec.title.to_s ,"", maxlength: 2, class: "articulos" %>
        </div> 
        </div>
      <% end %>
    </div>
    <div class="field">
      <%#= f.hidden_field :client_id, @cliente_id.to_i %>
    </div>
    <!--
    <div class="field">
      <%#= f.hidden_field :fecha_pedido, Time.now %>
    </div>
    -->
    <!--
    <div class="field">
      <%#= f.label :tipo_pago %><br>
      <%#= f.select_tag(:tipo_pago, options_for_select(["paypal",1]))  %>
    </div>
    -->

    <div class="cintilla_pedidos">
      <h2>Finalizar Pedido</h2>
      <img id="show_total" src="../../images/plus-icon.png"> 
      <img id="hide_total" src="../../images/less.jpg">
    </div>

    <div id ="total">
      <div class="mostrar_total"> 
        <div class="field">
          <%= f.label :tipo_entrega %><br>
          <%= f.select(:tipo_entrega, [["Entrega","Entrega"],["Recoger","Recoger"]]) %>
        </div>
        <div class="field">
          <%= f.label :fecha_entrega %><br>
