<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#hide_lasagna").click(function(){
    $("#lasagna").hide();
  });
  $("#show_lasagna").click(function(){
    $("#lasagna").show();
  });
  $("#hide_ensalada").click(function(){
    $("#ensalada").hide();
  });
  $("#show_ensalada").click(function(){
    $("#ensalada").show();
  });
  $("#hide_aderezo").click(function(){
    $("#aderezo").hide();
  });
  $("#show_aderezo").click(function(){
    $("#aderezo").show();

  });
});

</script>

  <%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="cintilla_pedidos">
      <h2>Lasagnas</h2>
      <img id="show_lasagna" src="../../images/plus-icon.png">
      <img id="hide_lasagna" src="../../images/less.jpg">
    </div>

    <div id="lasagna"> 
      <% @lasagna.each do |las| %>
        <div class="field">
          <%= label_tag las.title.to_s + ":  " %><%= number_field_tag las.title.to_s ,"", maxlength: 2, class: "articulos" %>
          <img src="../../images/lasagna-001.jpg" class="articulos_img"  >
        </div>
      <% end %>
    </div>

    <div class="cintilla_pedidos">
      <h2>Ensaladas </h2>
