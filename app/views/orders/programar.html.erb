<script>
$(document).ready(function(){

  $("#lasagna").show();
  $("#ensalada").hide();
  $("#aderezo").hide();

  $("#hide_lasagna").click(function(){
    $("#lasagna").hide();
  });
  $("#show_lasagna").click(function(){
    $("#lasagna").show();
  });
  $("#hide_ensalada").click(function(){
    $("#ensalada").hide();
  });
  $("#show_ensalada").click(function(){
    $("#ensalada").show();
  });
  $("#hide_aderezo").click(function(){
    $("#aderezo").hide();
  });
  $("#show_aderezo").click(function(){
    $("#aderezo").show();
  });
  $("#show_total").click(function(){
    $("#total").show();
  });
  $("#hide_total").click(function(){
    $("#total").hide();
  });    
  $("#hide_programar").click(function(){
    $("#programar").hide();
  });
  $("#show_programar").click(function(){
    $("#programar").show();
  });  
});

  $(function() {
    $( "#datepicker" ).datepicker();
  });

</script>

